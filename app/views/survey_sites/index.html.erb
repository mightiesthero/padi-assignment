<p id="notice"><%= notice %></p>

<%= link_to('Logout', destroy_user_session_path, method: :delete) %>

<h1>Survey Sites</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= sortable "Clientname" %></th>
      <th><%= sortable "Address" %></th>
      <th><%= sortable "City" %></th>
      <th><%= sortable "Longitude" %></th>
      <th><%= sortable "Latitude" %></th>
      <th><%= sortable "Status" %></th>
      <th><%= sortable "Created At" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survey_sites.each do |survey_site| %>
      <tr>
        <td><%= survey_site.clientname %></td>
        <td><%= survey_site.address %></td>
        <td><%= survey_site.city %></td>
        <td><%= survey_site.longitude %></td>
        <td><%= survey_site.latitude %></td>
        <td><%= SurveySite::STATUS[survey_site.status] %></td>
        <td><%= survey_site.created_at %></td>
        <td><%= link_to 'Show', survey_site %></td>
        <td><%#= link_to 'Edit', edit_survey_site_path(survey_site) %></td>
        <td><%#= link_to 'Destroy', survey_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

